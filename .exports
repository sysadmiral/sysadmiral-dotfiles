#!/bin/bash

#<3 vim
export EDITOR=/usr/bin/vim

#history settings
export HISTSIZE=1000000;
export HISTFILESIZE=$HISTSIZE;
export HISTCONTROL=ignoreboth;
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help:* help";

#golang exports
if [ -f /usr/local/go/bin/go ]; then
  export GOROOT=/usr/local/go
  export PATH=$PATH:$GOROOT/bin
else
  echo "Go not installed at /usr/local/go/. Go check!"
fi

if [ -d $HOME/golang ]; then
  if [ -z "$GOPATH" ]; then
    export GOPATH=$HOME/golang
    else
    export GOPATH=$GOPATH:$HOME/golang
    fi
else
  echo 'Unable to find workspace at '$HOME/golang'. Leaving $GOPATH alone.'
fi

#dotfiles scripts
if [ -d $HOME/mygit/dotfiles/bin ]; then
  export PATH=$PATH:HOME/mygit/dotfiles/bin
fi



