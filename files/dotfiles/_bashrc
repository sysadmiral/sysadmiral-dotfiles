# shellcheck disable=SC2148
# If not running interactively, don't do anything
case $- in
  *i*) ;;
  *) return;;
esac

[[ -r "/etc/profile" ]] \
  && [[ -f "/etc/profile" ]] \
  && source /etc/profile

# shellcheck source=/home/amo/.bash_profile
[[ -r "${HOME}/.bash_profile" ]] \
  && [[ -f "${HOME}/.bash_profile" ]] \
  && source "${HOME}/.bash_profile" \
  || echo "something screwy with sourcing bash_profile!"

